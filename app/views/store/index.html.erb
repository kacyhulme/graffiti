<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Photos Taken By Kacy Hulme</h1>

<div class="row">
	<% @products.in_groups_of(3) do |products| %>
		<div class="col-md-3">
			<%= image_tag(product.image_url) %>
			<h3><%= product.title %></h3>
	  	<div><%= sanitize(product.description) %></div>
			<div><%= number_to_currency(product.price) %></div>
      <%= button_to 'Add to Cart', line_items_path(product_id: product), class: 'btn btn-info btn-sm', remote: true %>
		</div>
	<% end %>
</div>

<footer>
this page has been viewed <%= pluralize session[:counter], 'time' %>
</footer>