<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Photos Taken By Kacy Hulme</h1>

<div class="container-fluid">
	<div class="row">
		<% cache ['store', Product.latest] do %>
			<% @products.each do |product| %>
				<% cache ['entry', product] do %>
					<div class="col-sm-4 col-md-3">
						<img class="img-responsive"><%= image_tag(product.image_url) %></img>
						<h3><%= product.title %></h3>
				  	<div><%= sanitize(product.description) %></div>
						<div><%= number_to_currency(product.price) %></div>	
			      <button type="button" class="btn btn-info"><%= link_to 'Add to Cart', line_items_path(product_id: product), remote: true %></button>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>

<footer>
this page has been viewed <%= pluralize session[:counter], 'time' %>
</footer>